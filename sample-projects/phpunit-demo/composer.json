{
  "name": "sample/phpunit-demo",
  "type": "library",
  "description": "Sample PHP library to demonstrate @nx-php/phpunit plugin",
  "keywords": ["sample", "demo", "phpunit", "testing"],
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Sample\\PhpunitDemo\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sample\\PhpunitDemo\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test:coverage": "vendor/bin/phpunit --coverage-text"
  }
}