{
  "name": "demo/library",
  "type": "library",
  "description": "A demo PHP library for testing Nx Composer plugin",
  "version": "1.0.0",
  "require": {
    "php": "^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Demo\\Library\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Demo\\Library\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "lint": "php -l src/",
    "format": "php-cs-fixer fix src/"
  }
}