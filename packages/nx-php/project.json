{
  "name": "nx-php",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx-php/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/nx-php",
        "main": "packages/nx-php/src/index.ts",
        "tsConfig": "packages/nx-php/tsconfig.lib.json",
        "assets": [
          "packages/nx-php/*.md",
          {
            "input": "./packages/nx-php/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/nx-php/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/nx-php",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/nx-php",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/nx-php/jest.config.ts"
      }
    }
  }
}
