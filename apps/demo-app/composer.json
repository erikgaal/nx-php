{
  "name": "demo/app",
  "type": "project",
  "description": "A demo PHP application for testing Nx Composer plugin",
  "version": "1.0.0",
  "require": {
    "php": "^8.0",
    "demo/library": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Demo\\App\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 public/index.php",
    "serve": "php artisan serve",
    "dev": "php -S localhost:8080",
    "test": "phpunit",
    "build": "composer install --no-dev --optimize-autoloader"
  }
}